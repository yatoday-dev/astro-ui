---
import type { WidgetFaq1Props as Props } from './types';
import WidgetWrapper from '../WidgetWrapper/WidgetWrapper.astro';
import Headline from '../Headline/Headline.astro';
import ItemGrid0 from '../ItemGrid0/ItemGrid0.astro';
import Card4 from '../Card4/Card4.astro';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  items = [],
  columns = 2,
  isAfterContent = false,
  position = 'center',
  asHeader = 'h2',
  asSubtitle = 'p',
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`${isAfterContent ? 'pt-0 md:pt-0 lg:pt-0' : ''} ${classes?.container ?? ''}`}
  bg={bg}
>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={classes?.headline as Record<string, string>}
    position={position}
    as={asHeader}
    asSubtitle={asSubtitle}
  />

  <ItemGrid0 columns={columns}>
    {
      items &&
        items.map((item) => (
          <Card4
            {...item}
            classes={{
              container: 'p-0 gap-0 border-0 bg-transparent',
              title: 'text-lg/5 font-semibold',
              icon: 'text-primary size-6',
            }}
          />
        ))
    }
  </ItemGrid0>
</WidgetWrapper>
