{
  "version": "2.0.0",
  "type": "shell",
  "tasks": [
    {
      "label": "🔍 Develop",
      "command": "npm run dev"
    },
    {
      "label": "🛠️ Build Package",
      "command": "npm run build:package"
    },
    {
      "label": "🛠️ Build Astro",
      "command": "npm run build"
    },
    {
      "label": "📥 Git fetch && pull",
      "command": "git fetch && git pull"
    },
    {
      "label": "✅🎯 Run Current Spec",
      "command": "npm run test:run ${relativeFile}"
    },
    {
      "label": "✔️ Check TypeScript Errors",
      "command": "tsc"
    },
    {
      "label": "✔️🎯 Check TypeScript for Current",
      "command": "tsc ${relativeFile}"
    },
    {
      "label": "🇪🇸 Lint Project",
      "command": "npm run lint"
    }
  ]
}
